{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://bootswatch.com/4/minty/bootstrap.min.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" integrity="sha384-DNOHZ68U8hZfKXOrtjWvjxusGo9WQnrNx2sqG0tfsghAvtVlRW3tvkXWZh58N9jp" crossorigin="anonymous">
    <style>
    </style>
{% endblock %}

{% block title %}{{ parent() ~ ' Contact' }}{% endblock %}

{% block body %}

    <div class="container">
        <h1 class="alert alert-dismissible alert-primary">{{ data.company_name }} Contact <img src="http://i2.wp.com/abelincolnpta.org/wp-content/uploads/2016/05/icecream.png?w=960" height="50px"></h1>
        <div class="jumbotron">
            <h4>Laissez-nous un mot doux ;)</h4>

            {{ form_start(form) }}
            <div class="form-group">
                {{ form_label(form.email) }}
                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(form.firstname) }}
                {{ form_widget(form.firstname, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(form.lastname) }}
                {{ form_widget(form.lastname, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(form.title) }}
                {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(form.message) }}
                {{ form_widget(form.message, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(form.send) }}
                {{ form_widget(form.send, {'attr': {'class': 'form-control btn btn-primary btn-lg'}}) }}
            </div>
            {{ form_end(form) }}

        </div>

    </div>
{% endblock %}